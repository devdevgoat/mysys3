<script type="text/javascript">
  var rebuild = function () {
  var
    radius = 20, 
    columns = 10, 
    rows = 5, 
    cssClass = 'hexfield';

  $('#map').empty().hexGridWidget(radius, columns, rows, cssClass).on('hexclick', function (e) { 
     $('#logger').text('clicked [' + e.column + ',' + e.row + '] hex with center at [' + e.center.x + ',' + e.center.y + '] px');
  });
  $('#map .hexfield').click(function () {
    this.classList.toggle('clicked');
  });
};
$('#rebuild').click(rebuild);

</script>

<script>
window.onload = function () {
rebuild();
var chart = new CanvasJS.Chart("chart", {
 axisY:{
      gridThickness: 0, 
      maximum: 100       
    },
  axisX:{       
    },
  dataPointMaxWidth: 200,
  backgroundColor:' #f7fafc',
  data: [{
    type: "bar", 
    yValueFormatString: "#,###",
    dataPoints: [
      { label: "PE", y: 77 },
      { label: "ME", y: 12 },
      { label: "SE", y: 1 },
    ]
  }]
});

function updateChart(newDataPoints) {
  var dps = chart.options.data[0].dataPoints;
  for (var i = 0; i < newDataPoints.length; i++) {
    boilerColor = newDataPoints[i].y < 10 ? "#FF2500" : newDataPoints[i].y <= 65 ? "#FF6000" : newDataPoints[i].y > 65 ? "#6B8E23 " : null;
    dps[i] = {label: newDataPoints[i].label , y: newDataPoints[i].y, color: boilerColor};
  }
  chart.options.data[0].dataPoints = dps; 
  chart.render();
};
updateChart(chart.options.data[0]);


}
</script>

